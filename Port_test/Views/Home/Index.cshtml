</head>
<body>


    <nav id="navtop">
        <div class="container">

            <div class="logo">
                <a href="#header"><span id="hu">Hu</span>bar</a>
            </div>

            <div class="menu_strony">
                <ul>
                    <li><a href="#info">Info</a></li>
                    <li><a href="#skills">Skills</a></li>
                    <li><a href="#projects">Projects</a></li>
                    <li><a href="#contact">Contact</a></li>
                </ul>
            </div>
            <div class="logo"></div>

