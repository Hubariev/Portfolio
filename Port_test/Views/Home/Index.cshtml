<script type="text/javascript">
    $(function () {
        $('#fullpage').fullpage({
            sectionSelector: '.page',
            scrollOverflow: true
        });
    });


    navtop.onmouseover = function () { mouseFunction() };

    function mouseFunction() {
        if (document.getElementById("navtop").onmouseover) {
            document.getElementById("navtop").style.boxShadow = "0 2px 12px 0 chartreuse";
            document.getElementById("navtop").style.color = "#00FF7F";
        }
    }

    navtop.onmouseout = function () { mouseFunction1() };

    function mouseFunction1() {
        if (document.getElementById("navtop").onmouseout) {
            document.getElementById("navtop").style.boxShadow = null;
        }

    }


    $('.menu_strony ul li a').on('click', function (event) {
        $(this).parent().find('a').removeClass('active');
        $(this).addClass('active');
    });

    $(window).on('scroll', function () {
        $('.wysok').each(function () {
            if ($(window).scrollTop() >= $(this).position().top) {
                var id = $(this).attr('id');
                $('.menu_strony ul li a').removeClass('active');
                $('.menu_strony ul li a[href=#' + id + ']').addClass('active');
            }
        });
    });

</script>